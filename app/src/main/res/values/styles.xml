<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorBack</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>

        <item name="colorBackgroundFloating">@color/colorBackMain</item>

        <item name="android:textViewStyle">@style/RobotoTextViewStyle</item>

        <!--<item name="colorControlNormal">#c43e00</item>
        <item name="colorControlActivated">#f57f17</item>
        <item name="colorControlHighlight">#ff6f00</item>-->

        <item name="colorControlNormal">#2e7d32</item>
        <item name="colorControlActivated">#60ad5e</item>
        <item name="colorControlHighlight">#60ad5e</item>

        <item name="materialButtonStyle">@style/AppButton</item>
    </style>

    <style name="AppButton" parent="Widget.MaterialComponents.Button">
        <item name="backgroundTint">?attr/colorSecondary</item>
    </style>

    <style name="RobotoTextViewStyle" parent="android:Widget.TextView">
        <item name="android:fontFamily">sans-serif-light</item>
    </style>

    <style name="SplashTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="colorPrimary">@color/colorBack</item>
    </style>

</resources>