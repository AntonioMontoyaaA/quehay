<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="300dp"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/colorBackMain">


    <com.google.android.material.card.MaterialCardView
        android:id="@+id/card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="@color/colorBackCards"
        app:strokeColor="@color/colorBackMain"
        app:cardElevation="10dp"
        app:cardCornerRadius="8dp"
        android:layout_margin="8dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Media -->
            <ImageView
                android:id="@+id/imagenNovedad"
                android:layout_width="match_parent"
                android:layout_height="180dp"
                android:padding="5dp"
                android:layout_marginTop="5dp"
                app:srcCompat="@drawable/logo"
                android:scaleType="centerCrop"
                android:contentDescription=""
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="10dp">

                <!-- Title, secondary and supporting text -->
                <TextView
                    android:id="@+id/nombre"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorTextosBlancos"
                    android:textSize="25dp"
                    android:paddingStart="@dimen/text_margin"
                    android:paddingLeft="@dimen/text_margin"
                    android:textStyle="bold"
                    android:text=""
                    />
                <TextView
                    android:id="@+id/unidadMedida"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="0dp"
                    android:layout_marginBottom="8dp"
                    android:textColor="@color/colorTextosBlancos"
                    android:text=""
                    android:textSize="15dp"
                    android:paddingStart="@dimen/text_margin"
                    android:paddingLeft="@dimen/text_margin"
                    android:textAppearance="?attr/textAppearanceBody2"
                    />

            </LinearLayout>

        </LinearLayout>

    </com.google.android.material.card.MaterialCardView>

</LinearLayout>
